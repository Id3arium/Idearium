generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id            String    @id @default(uuid()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  // accounts      Account[]
  // sessions      Session[]
  // tweets        Tweet[]
}

model Node {
  id                          String   @id @default(uuid()) @map("_id") 
  created                     DateTime @default(now())
  lastModified                DateTime @default(now())
  title                       String?
  content                     String
  inspiration                 String?
  frequency                   Float?
  ranking                     Int?
}
